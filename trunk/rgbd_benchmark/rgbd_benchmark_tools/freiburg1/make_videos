#!/bin/bash

cd $(rospack find kinect_datasets)

for hz in 2 5 10 30; do
for mode in depth rgb; do
for f in $(find -maxdepth 3 -type "d" -name "*${hz}hz-synced-gt-points-$mode"); do 

echo $f
mencoder mf://$f/*.png -mf fps=${hz}:type=png -ovc lavc -lavcopts vcodec=mpeg4 -nosound -o $f.avi; 

done
done
done

cp bags/public/*.avi ~/public_html/dirs/rgbd_datasets/

